{
  "name": "aad-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www --exec 'npm run lint && node'",
    "dev:nolint": "nodemon ./bin/www",
    "db:load": "knex seed:run",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:currentVersion": "knex migrate:currentVersion",
    "lint": "eslint --quiet .",
    "apidoc": "apidoc -i 'server/docs/' -o public/apidoc/"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cookie-parser": "~1.4.3",
    "debug": "^2.6.9",
    "errorhandler": "^1.5.0",
    "express": "~4.16.0",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "jsonwebtoken": "^8.4.0",
    "knex": "^0.16.3",
    "morgan": "~1.9.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.8.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.7",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "nodemon": "^1.18.9"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ],
      "no-use-before-define": [
        "error",
        {
          "variables": false
        }
      ],
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ],
      "arrow-body-style": [
        0
      ]
    }
  },
  "eslintIgnore": [
    "bin/*",
    "public/apidoc/*"
  ],
  "apidoc": {
    "name": "AAD-API",
    "version": "1.0.0",
    "description": "API created to service AAD Survey Initiative",
    "apidoc": {
      "title": "AAD-API Documentation",
      "url": "https://github.com/sofwerx/AAD-API"
    },
    "template": {
      "forceLanguage": "en"
    }
  }
}
